# ====================================================
# 环境变量配置示例
# 使用说明：
# 1. 复制此文件为 .env (开发环境) 或配置到系统环境变量 (生产环境)
# 2. 填写真实的配置值
# 3. 确保 .env 文件已添加到 .gitignore
# ====================================================

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=oauth2_db
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0

# ==================== Nacos配置 ====================
NACOS_SERVER_ADDR=localhost:8848
NACOS_NAMESPACE=public
NACOS_GROUP=DEFAULT_GROUP

# ==================== Sentinel配置 ====================
SENTINEL_DASHBOARD=localhost:8858

# ==================== RabbitMQ配置 ====================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# ==================== 邮件配置 ====================
MAIL_HOST=smtp.qq.com
MAIL_PORT=587
MAIL_USERNAME=your_email@qq.com
MAIL_PASSWORD=your_email_auth_code_here

# ==================== OAuth2配置 ====================
# Gitee OAuth
GITEE_CLIENT_ID=your_gitee_client_id_here
GITEE_CLIENT_SECRET=your_gitee_client_secret_here
GITEE_REDIRECT_URI=http://localhost:8080/oauth/gitee/callback

# OAuth2 Client
OAUTH2_CLIENT_ID=client
OAUTH2_CLIENT_SECRET=secret

# ==================== 服务间认证配置 ====================
# 重要：生产环境必须使用强密钥（至少32位随机字符）
SERVICE_AUTH_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION_MIN_32_CHARS

# ==================== JWT配置 ====================
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_JWT_SECRET_KEY_MIN_32_CHARS

# ==================== 应用配置 ====================
# 前端地址
FRONTEND_URL=http://localhost:5173
# 用户服务网关地址
USER_SERVICE_URL=http://localhost:9000

# ==================== HTTPS配置 ====================
# SSL证书路径（生产环境）
SSL_KEY_STORE=classpath:keystore.p12
SSL_KEY_STORE_PASSWORD=your_keystore_password
SSL_KEY_STORE_TYPE=PKCS12
SSL_KEY_ALIAS=oauth2demo

# ==================== 安全配置 ====================
# CSRF Token密钥
CSRF_SECRET=CHANGE_THIS_TO_A_STRONG_CSRF_SECRET_KEY

# ==================== 日志级别 ====================
LOG_LEVEL=INFO
